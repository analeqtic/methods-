using System;

namespace Program
{
    class Program2
    {
        static void Ma2n(string[] args)
        {
            int result = Multiply(3, 3);

            Console.WriteLine("The result is " + result);

            if (result % 2 == 0)
            {
                Console.WriteLine("Result is an even number!");
            }
            else
            {
                Console.WriteLine("The result is uneven.");
            }

            //wait before closing
            Console.ReadKey();
        }

        static int Multiply (int num01, int num02)
        {
            int result = num01 * num02;
            return result; 
        }
        
    }   
}
